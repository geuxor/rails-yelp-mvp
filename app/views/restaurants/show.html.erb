<%= link_to 'List', restaurants_path, :class => "btn btn-primary shadow" %>
<%= link_to 'New restaurant', new_restaurant_path, :class => "btn btn-primary shadow" %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant.id), :class => "btn btn-primary shadow" %>
<%= link_to "Delete",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" }, :class => "btn btn-primary shadow" %>

<h2>Name: <%= @restaurant.name %></h2>
<p>Address: <%= @restaurant.address %></p>
<p>Category: <%= @restaurant.category %></p>
<p>Phone Nr: <%= @restaurant.phone_number %></p>